<div id='wiki'>
  <div id="wiki-menu">
      <span id="size-menu">Information</span>
      <span class="icons"><i class="fa fa-times"></i></span>
      <span class="icons" id="maxmin"><i class="fa fa-minus"></i></button></span>
  </div>
  <div id="info">
    <iframe id="wiki-info" src="" width="99.5%" height="99%" name="SubHtml" scrolling="auto" frameborder="1">
      <p>Texto alternativo para navegadores que no aceptan iframes.</p>
    </iframe>
  </div>
</div>

<!-- Tabla Periodica-elementos -->
<div id="periodic-table">
	<table>
		<tr class="row-header">
			<td id='legend'>
					<table id="box-legend">
						<tr>
							<td id="atomic-number" class="atomic-number"> Z </td>
							<td id="legend-property" class="element-property" colspan="2"> Property </td>
						</tr>
						<tr>
							<td id="atomic-short" class="atomic-number" colspan="3"> Symbol</td>
						</tr>
						<tr>
							<td id="elect-configuration" class="electron-configuration" colspan="3"> Configuration </td>
						</tr>
						<tr>
							<td id="atomic-name" class="atomic-name" colspan="3"> Name </td>
						</tr>
					</table>
					<table id="categories-legend">
						<tr>
							<td class="button-category" rowspan="3" data-category="4" data-metal-category="semimetal">Semi Metals</td>
							<td class="button-category" colspan="3" data-metal-category="nonmetal" data-general="nonmetal"> Nonmetals</td>
						<tr>
						</tr>
							<td class="button-category" data-category="5" data-metal-category="nonmetal">Other nonmetals</td>
							<td class="button-category" data-category="6" data-metal-category="nonmetal">Halogen</td>
							<td class="button-category" data-category="7" data-metal-category="nonmetal">Noble Gases</td>
						</tr>
						<tr>
							<td class="button-category" colspan="4" data-metal-category="metal" data-general="metal">Metals</td>
						</tr>
						<tr>
							<td class="button-category" data-category="0" data-metal-category="metal">Alkali Metals</td>
							<td class="button-category" rowspan="2" data-category="2" data-metal-category="metal">Transition Metals</td>
							<td class="button-category" data-category="8" data-metal-category="metal">Lanthanides</td>
							<td class="button-category" rowspan="2" data-category="3" data-metal-category="metal">Basic Metals</td>
						</tr>
						<tr>
							<td class="button-category" data-category="1" data-metal-category="metal">Alkali Earth</td>
							<td class="button-category" data-category="9" data-metal-category="metal">Actinides</td>
						</tr>
					</table>
					<div id="properties-menu-legend" class="container">
						<div class="row-container">
								<div class="col-md-5">
									<input type="radio" id="mass" value="mass" name="property" class="property-button" subname="Atomic Mass">
									<label for="mass">Atomic Mass: <span value="mass"></span>g/mol</label>
								</div>
								<div class="col-md-7">
									<input type="radio" id="state" value="state" name="property" class="property-button" subname="State">
									<label for="state">State: <span value="state"></span></label>
								</div>
						</div>
						<div class="row-container">
								<div class="col-md-5">
									<input type="radio" id="boiling_point" value="boiling_point" name="property" class="property-button" subname="Boiling Tª">
									<label for="boiling_point">Boiling point: <span value="boiling_point"></span> K</label>
								</div>
								<div class="col-md-7">
									<input type="radio" id="ionization_energy" value="ionization_energy" name="property" class="property-button" subname="Ionization Energy">
									<label for="ionization_energy">Ionization energy: <span value="ionization_energy"></span> kJ/mol</label>
								</div>
						</div>
						<div class="row-container">
								<div class="col-md-5">
									<input type="radio" id="melting_point" value="melting_point" name="property" class="property-button" subname="Melting Tª">
									<label for="melting_point">Melting point: <span value="melting_point"></span> K</label>
								</div>
								<div class="col-md-7">
									<input type="radio" id="electronegativity" value="electronegativity" name="property" class="property-button" subname="Electron Negativity">
									<label for="electronegativity" > Electronegativity: <span value="electronegativity"></span></label>
								</div>
						</div>
						<div class="row-container">						
								<div class="col-md-5">
									<input type="radio" id="radium" value="radium" name="property" class="property-button" subname="Radium">
									<label for="radium">Radium: <span value="radium"></span> pm</label>
								</div>
								<div class="col-md-7">
									<input type="radio" id="electron_affinity" value="electron_affinity" name="property" class="property-button" subname="Electron Affinity">
									<label for="electron_affinity">Electron affinity: <span value="electron_affinity"></span> kJ/mol</label>
								</div>
						</div>
						<div class="row-container">
								<div class="col-md-5">
									<input type="radio" id="abundance" value="abundance" name="property" class="property-button" subname="Abundance">
									<label for="abundance">Abundance: <span value="abundance"></span> %</label>
								</div>
								<div class="col-md-7">
									<input type="radio" id="valencies" value="valencies" name="property" class="property-button" subname="valencies">
									<label for="valencies">Valencies: <span value="valencies"></span></label>
								</div>
							
						</div>
					</div>
					<div id='first-state-legend'>
						<table id="state-legend">
							<tr>
								<td><div id="solid" class="border-state"> S</div></td>
								<td class="left-align"> Solid</td>
							</tr>
							<tr>
								<td><div id="liquid" class="border-state">L</div></td>
								<td class="left-align"> Liquid</td>
							</tr>
							<tr>
								<td><div class="border-state" id="gas"> G</div></td>
								<td class="left-align"> Gas</td>
							</tr>
							<tr>
								<td><div class="border-state" id="unknown">U </div></td>
								<td class="left-align"> Unknown</td>
							</tr>
						</table>
					</div>
					<div class='temperature-slider'>
				
						<div class="slider-text"><span id="kelvin">293</span> Kelvin</div>
						<div class="slider-text"><span id="centigrades">20</span> &#8451entigrades</div>
						<div class="slider-text"><span id="fahrenheit">68</span> &#8457ahrenheit</div>
						<div class='slider'>
							<div class='emptyprogress'></div>
							<div class='progress'></div>
							<div class='indicator'></div>
						</div>				
					</div>
				</div> 
				<div id='second-legend'>
					<div class='button-general-properties'>
						<button class='btn btn-primary btn-lg btn-block'> General properties </button>
					</div>
        </div>
			</td>


			<% (1..18).each do |i| %>
				<td id="group<%= i %>" class="group"> <%= i %>  </td>
			<% end %>
		</tr>
		<% i = 0 %>
		<% @matrix_elements.each_with_index do |period, index| %>
			<tr class="row"> 
				<% if index < 7 %>
					<td class="period" id="period<%= index + 1 %>" data-period="<%= index + 1 %>"> 
						<%= index + 1 %> 
					</td>
				<% else %>
					<td> </td>
				<% end %>

				<% period.each do |is_an_element|  %>
					<% if is_an_element == 2 %>
						<% i = i + 15 %>
					<% elsif is_an_element == 3 %>
						<% i = i - 62 %>
					<% elsif is_an_element == 4 %>
						<% i = i + 17 %>
					<% end %>

					<% if is_an_element > 0 && is_an_element < 5  %>
            <td id="element<%= i %>" class="border-element"> 
            
							<table class="element-box">
								<tr>
									<td class="atomic-number"> <%= @elements[i].atomic_number %> </td>
									<td class="element-property" id="element<%= i %>-property" colspan="2">  </td>
								</tr>
								<tr>
									<td class="atomic-short" colspan="3"> <%= @elements[i].short_name %></td>
								</tr>
								<tr>
									<td class="electron-configuration" colspan="3"> <%= element_configuration(@elements[i].electron_configuration) %> </td>
								</tr>
								<tr>
									<td class="atomic-name" colspan="3"><%= @elements[i].long_name %></td>
                </tr>
              </table>
						</td>
						<% i += 1 %>
					<% elsif is_an_element == 5 %>
						<td class="period period-special" id="period<%= index %>" data-period="<%= index - 2 %>"> <%= index - 2 %> </td>
					<% elsif is_an_element == 6 %>
						<td class="elementoids" id="elementoids<%= index + 1 %>" data-period="<%= index + 1 %>"> <%= (i+1) %> - <%= (i+15) %> </td>
					<% else %>
						<td class="no-border"> </td>
					<% end %>
				<% end %>
			<% end %>
		</tr>
	</table>
</div>
