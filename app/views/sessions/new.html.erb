	<form class="col-md-4"></form>
	<div class="col-md-4">
	<%= form_for(:session, url: login_path) do |f| %>
		<% if flash[:notice] %>
			<p class="notice-msg">
				<%= flash[:notice] %>
			</p>
		<% elsif flash[:error] %>
			<p class="error-msg">
				<%= flash[:error] %>
			</p>
		<% end %>
		<div class="form-group">
	    	<%= f.email_field :email, class: "form-control input-lg", :placeholder => 'Email' %>
	    </div>
	    <div class="form-group">
	    	<%= f.password_field :password, class: "form-control input-lg", :placeholder => 'ContraseÃ±a' %>
	    </div>
	    <div class="form-group">
	    	<%= f.submit 'Log in', class: "btn btn-primary btn-lg btn-block accept" %>
	    </div>
	</div>
	<% end %>
