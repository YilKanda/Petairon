									<td><%= User.find(score.id_user).nick %></td>
									<td><%= score.puntuation %></td>
									<td><%= score.time %></td>
								</tr>	
							<% end %>
							</table>
						<% end %>
						<% if @score_timer_expert %>
							<table class='expert score-levels'>	
							<tr><td colspan="3">Expert</td></tr>
								<tr class="table-header">
									<td>User</td>
